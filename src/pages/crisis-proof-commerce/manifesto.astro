---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
type Props = CollectionEntry<"blog">["data"];

import Content from "../../content/manifesto.md";
---

<html lang="en">
    <head>
        <BaseHead
            title="The Crisis-Proof Commerce Manifesto"
            description="A declaration of independence from technical fragility for ambitious e-commerce brands. We reject the lie that technology should limit business ambition."
        />
        <style>
            main {
                width: calc(100% - 2em);
                max-width: 100%;
                margin: 0;
            }
            .hero-image {
                width: 100%;
            }
            .hero-image img {
                display: block;
                margin: 0 auto;
                border-radius: 12px;
                box-shadow: var(--box-shadow);
            }
            .prose {
                width: 720px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 1em;
                color: rgb(var(--gray-dark));
                word-break: keep-all;
                overflow-wrap: break-word;
            }
            .title {
                margin-bottom: 1em;
                padding: 1em 0;
                text-align: center;
                line-height: 1;
            }
            .title h1 {
                margin: 0 0 0.5em 0;
                word-break: keep-all;
                overflow-wrap: break-word;
            }
            .date {
                margin-bottom: 0.5em;
                color: rgb(var(--gray));
            }
            .last-updated-on {
                font-style: italic;
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article>
                <div class="hero-image">
                    {
                        heroImage && (
                            <img
                                width={1020}
                                height={510}
                                src={heroImage}
                                alt=""
                            />
                        )
                    }
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <FormattedDate date={"2025-04-06T00:00:00Z"} />
                            {
                                "2025-04-06T00:00:00Z" && (
                                    <div class="last-updated-on">
                                        Last updated on{" "}
                                        <FormattedDate
                                            date={"2025-04-06T00:00:00Z"}
                                        />
                                    </div>
                                )
                            }
                        </div>
                        <h1>"The Crisis-Proof Commerce Manifesto"</h1>
                        <hr />
                    </div>
                    <slot />
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>

