---
import PageLayout from '../../layouts/Page.astro'
---
<PageLayout>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h1 class="text-5xl font-bold mb-16 text-center">Case Studies</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Case Study Card 1 -->
    <div class="rounded-2xl overflow-hidden bg-white shadow-lg">
      <div class="relative">
        <img 
          src="https://placehold.co/600x400/EEE/31343C" 
          alt="ShowPixels Case Study" 
          class="w-full h-[300px] object-cover"
        />
      </div>
      <div class="p-6">
        <div class="flex gap-2 mb-4">
          <span class="px-4 py-1 rounded-full bg-gray-100 text-gray-600 text-sm">Landing Page</span>
        </div>
        <h2 class="text-2xl font-bold mb-2">ShowPixels</h2>
        <p class="text-gray-600 mb-4">Redesign That Brought 3 High-Ticket Clients in Just 1 Week</p>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-500">Duration</p>
            <p class="font-medium">3 weeks</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Industry</p>
            <p class="font-medium">Agency</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Case Study Card 2 -->
    <div class="rounded-2xl overflow-hidden bg-white shadow-lg">
      <div class="relative">
        <img 
          src="https://placehold.co/600x400/EEE/31343C" 
          alt="Yasny.com Case Study" 
          class="w-full h-[300px] object-cover"
        />
      </div>
      <div class="p-6">
        <div class="flex gap-2 mb-4">
          <span class="px-4 py-1 rounded-full bg-gray-100 text-gray-600 text-sm">Landing Page</span>
          <span class="px-4 py-1 rounded-full bg-gray-100 text-gray-600 text-sm">3D Design</span>
        </div>
        <h2 class="text-2xl font-bold mb-2">Yasny.com</h2>
        <p class="text-gray-600 mb-4">Web3 website that helped to get the first investors</p>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-500">Duration</p>
            <p class="font-medium">4 weeks</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Industry</p>
            <p class="font-medium">Web 3.0</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    
</PageLayout>

