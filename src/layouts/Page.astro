---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Merriweather:wght@700&display=swap");

      :root {
        --font-sans: "Inter", ui-sans-serif, system-ui, -apple-system,
          BlinkMacSystemFont, sans-serif;
        --font-heading: "Merriweather", Georgia, serif;
      }
    </style>
  </head>

  <body
    class="bg-gradient-to-br from-gray-50 via-white to-gray-50 text-gray-900 flex flex-col min-h-screen antialiased"
  >
    <Header />

    <main class="flex-grow">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="max-w-3xl mx-auto">
          <div
            class="prose prose-sm md:prose-base max-w-none text-gray-700/90 space-y-6 font-sans leading-snug"
          >
            <div
              class="[&_h2]:font-heading [&_h3]:font-heading [&_h4]:font-heading space-y-6 [&_ul]:space-y-3 [&_li]:text-sm [&_li]:md:text-[0.925rem]"
            >
              <slot />
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>
