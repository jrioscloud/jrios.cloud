---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"caseStudies">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>

    <body class="bg-white">
        <Header />

        <main class="container mx-auto px-4 sm:px-5 py-10 md:py-14">
            <article class="max-w-4xl mx-auto space-y-10">
                <!-- Hero Image -->
                {
                    heroImage && (
                        <div class="group group/image overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300">
                            <img
                                width={1020}
                                height={510}
                                src={heroImage}
                                alt=""
                                class="w-full h-auto object-cover transition-transform duration-300 group-hover/image:scale-[1.02]"
                            />
                        </div>
                    )
                }

                <!-- Content Container -->
                <div class="max-w-3xl mx-auto space-y-8">
                    <!-- Title Section -->
                    <header class="text-center space-y-5">
                        <div
                            class="flex flex-col sm:flex-row justify-center items-center gap-2 text-sm md:text-base text-slate-500 font-medium"
                        >
                            <FormattedDate date={pubDate} />
                            {
                                updatedDate && (
                                    <span class="hidden sm:block">â€¢</span>
                                )
                            }
                            {
                                updatedDate && (
                                    <div class="flex items-center space-x-2 text-slate-500/90 italic">
                                        <span>Updated:</span>
                                        <FormattedDate date={updatedDate} />
                                    </div>
                                )
                            }
                        </div>

                        <h1
                            class="font-heading text-3xl sm:text-4xl md:text-[2.75rem] font-bold text-slate-900 tracking-tight leading-tight bg-gradient-to-r from-slate-900 to-slate-700 text-transparent bg-clip-text"
                        >
                            {title}
                        </h1>
                    </header>

                    <!-- Article Content -->
                    <div
                        class="prose md:prose-lg font-sans text-slate-700 leading-relaxed space-y-6"
                    >
                        <slot />
                    </div>
                </div>
            </article>
        </main>

        <Footer />
    </body>
</html>
