---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"caseStudies">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />

        <style>
            @import url("https://fonts.googleapis.com/css2?family=Merriweather:wght@700&display=swap");

            :root {
                --font-sans: "Inter", ui-sans-serif, system-ui, -apple-system,
                    BlinkMacSystemFont, sans-serif;
                --font-heading: "Merriweather", Georgia, serif;
            }
        </style>
    </head>

    <body class="bg-white">
        <Header />

        <main class="container mx-auto px-4 sm:px-6 py-8 md:py-12">
            <article class="max-w-3xl mx-auto space-y-8">
                {/* Hero Image */}
                {
                    heroImage && (
                        <figure class="mb-8 space-y-2">
                            <div class="overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300">
                                <img
                                    width={1020}
                                    height={510}
                                    src={heroImage}
                                    alt=""
                                    class="w-full h-auto object-cover"
                                    loading="eager"
                                />
                            </div>
                            {heroImage.caption && (
                                <figcaption class="text-sm text-slate-500 text-center italic">
                                    {heroImage.caption}
                                </figcaption>
                            )}
                        </figure>
                    )
                }

                {/* Main Content */}
                <div class="space-y-6">
                    {/* Metadata */}
                    <div class="text-center space-y-1 mb-6">
                        <div
                            class="flex justify-center items-center gap-2 text-sm text-slate-500"
                        >
                            {
                                updatedDate && (
                                    <>
                                        <span class="text-slate-300">â€¢</span>
                                        <span class="text-sm text-slate-500">
                                            Actualizado:{" "}
                                            <FormattedDate date={updatedDate} />
                                        </span>
                                    </>
                                )
                            }
                        </div>
                    </div>

                    {/* Main Title */}
                    <h1
                        class="text-2xl md:text-3xl font-bold text-slate-900 text-center leading-tight mb-6"
                    >
                        {title}
                    </h1>

                    {/* Divider */}
                    <div class="border-t border-slate-100 w-20 mx-auto"></div>

                    {/* Content Container */}
                    <div
                        class="prose prose-sm md:prose-base max-w-none text-gray-700/90 space-y-6 font-sans leading-snug"
                    >
                        {/* Description */}
                        {
                            description && (
                                <p class="text-base md:text-[0.97rem] text-gray-600/90 leading-relaxed mb-6">
                                    {description}
                                </p>
                            )
                        }

                        {/* MDX Content */}
                        <div
                            class="[&_h2]:font-heading [&_h3]:font-heading [&_h4]:font-heading space-y-6 [&_ul]:space-y-3 [&_li]:text-sm [&_li]:md:text-[0.925rem]"
                        >
                            <slot />
                        </div>
                    </div>
                </div>
            </article>
        </main>

        <Footer />
    </body>
</html>
