---
// components/CTAButton.astro
const { href, text } = Astro.props;
---

<a
    href={href}
    class="inline-flex items-center px-8 py-3.5 space-x-3 bg-gradient-to-r from-white to-gray-50 border border-gray-300/80 hover:border-cyan-300 rounded-xl transition-all duration-300 hover:scale-[1.015] shadow-md hover:shadow-lg"
>
    <svg
        class="w-6 h-6 text-cyan-600"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
        ></path>
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span class="text-gray-900 font-medium text-lg">
        {text}
    </span>
</a>
