---
// components/CTAButton.astro
const { href, text, variant = "default" } = Astro.props;
---

<a
    href={href}
    class={`inline-flex items-center px-8 py-3.5 space-x-3 border rounded-xl transition-all duration-300 hover:scale-[1.015] shadow-md hover:shadow-lg no-underline ${
        variant === "cta"
            ? "bg-gradient-to-r from-cyan-500 to-cyan-600 border-cyan-600 hover:bg-gradient-to-br hover:from-cyan-600 hover:to-cyan-700 hover:border-cyan-700"
            : "bg-gradient-to-r from-white to-gray-50 border-gray-300/80 hover:border-cyan-300 hover:bg-gradient-to-br"
    }`}
>
    <span
        class={`font-medium text-lg no-underline transition-colors ${
            variant === "cta" ? "text-white" : "text-gray-900"
        }`}
    >
        {text}
    </span>
</a>
