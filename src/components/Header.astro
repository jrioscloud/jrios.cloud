---
import HeaderLink from "./HeaderLink.astro";
import socialLinks from "./../data/social-links.json";
import navLinks from "./../data/nav-links.json";
---

<header
	class="sticky top-0 bg-white/80 backdrop-blur-md border-b border-slate-100/70 z-50"
>
	<nav
		class="container mx-auto px-4 sm:px-6 py-3 flex items-center justify-between"
	>
		<!-- Logo Section -->
		<div class="flex items-center space-x-2">
			<span
				class="h-5 w-5 bg-gradient-to-br from-blue-600 to-blue-400 rounded-sm"
			></span>
			<a
				href="/"
				class="font-heading text-lg font-semibold text-slate-900 tracking-tight hover:text-blue-600 transition-colors"
			>
				Jaime Rios
				<span class="text-blue-600 font-medium text-sm ml-1.5"
					>// AWS Consulting</span
				>
			</a>
		</div>

		<!-- Navigation Links -->
		<div class="hidden md:flex items-center space-x-4">
			{
				navLinks.map((link) => (
					<HeaderLink
						href={link.url}
						class="text-[0.95rem] font-medium text-slate-700 hover:text-blue-600 px-3 py-2 rounded-md hover:bg-slate-50/50 transition-all"
					>
						{link.name}
					</HeaderLink>
				))
			}
		</div>

		<!-- CTA Section -->
		<div class="flex items-center gap-4">
			{/* Social Icons */}
			<div class="hidden lg:flex items-center space-x-3">
				{
					socialLinks.map((link) => (
						<a
							href={link.url}
							target="_blank"
							class="text-slate-500 hover:text-blue-600 p-1.5 rounded-full hover:bg-slate-100/50 transition-colors"
							aria-label={link.srText}
						>
							<svg
								viewBox="0 0 24 24"
								width="20"
								height="20"
								class="fill-current"
							>
								<path d={link.svgPath} />
							</svg>
						</a>
					))
				}
			</div>

			{/* Contact Button */}
			<div class="relative">
				<a
					href="https://cal.com/jrioscloud/45min"
					target="_blank"
					rel="noopener"
					class="flex items-center space-x-2 px-4 py-2.5
                           border border-slate-300/60 bg-white/90
                           text-slate-700 hover:text-blue-600
                           text-sm font-medium
                           rounded-lg
                           transition-all
                           hover:border-blue-500/80
                           hover:bg-slate-50/50
                           shadow-sm hover:shadow-md/5"
				>
					<span>Book Strategy Call</span>
					<svg
						class="w-4 h-4 text-slate-500 hover:text-blue-600 transition-colors"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						stroke-width="1.8"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"></path>
					</svg>
				</a>
			</div>
		</div>
	</nav>
</header>
