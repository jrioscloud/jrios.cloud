---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import socialLinks from "../data/social-links.json";
import navLinks from "../data/nav-links.json";
---

<header class="bg-white shadow">
	<nav class="flex items-center justify-between px-4 sm:px-6 lg:px-8 py-4">
		<!-- Logo / Título -->
		<h2 class="text-lg font-bold">
			<a href="/" class="text-gray-800 no-underline">
				{SITE_TITLE}
			</a>
		</h2>

		<!-- Enlaces internos -->
		<div class="hidden md:flex space-x-4">
			{
				navLinks.map((link) => (
					<HeaderLink href={link.url}>{link.name}</HeaderLink>
				))
			}
		</div>

		<!-- Enlaces sociales -->
		<div class="hidden md:flex space-x-3">
			{
				socialLinks.map((link) => (
					<a
						href={link.url}
						target="_blank"
						class="text-gray-600 hover:text-gray-800"
					>
						<span class="sr-only">{link.srText}</span>
						<svg
							viewBox="0 0 16 16"
							aria-hidden="true"
							width="24"
							height="24"
							fill="currentColor"
						>
							<path d={link.svgPath} />
						</svg>
					</a>
				))
			}
		</div>

		<!-- CTA -->
		<div class="ml-4">
			<a
				href="/strategic-call"
				class="inline-flex items-center gap-2 px-4 py-2 rounded-full
               bg-white border border-gray-200 text-gray-700 text-sm
               font-medium shadow-sm hover:shadow-md
               transition-transform duration-300 hover:scale-105 no-underline"
			>
				<span>Got an idea?</span>
				<!-- Ícono opcional -->
				<svg
					class="w-4 h-4"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					viewBox="0 0 24 24"
					aria-hidden="true"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M15.172 7l-6.586 6.586c-.78.78-.78 2.047 0 2.828l.293.293c.78.78 2.047.78 2.828 0L18 10.414"
					></path>
				</svg>
			</a>
		</div>
	</nav>
</header>
