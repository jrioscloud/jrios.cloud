---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import socialLinks from "../data/social-links.json";
import navLinks from "../data/nav-links.json";
import TransparentButton from "./buttons/TransparentButton.astro";
---

<header class="bg-white border-b border-gray-100">
	<nav
		class="container mx-auto px-4 py-1.5 flex items-center justify-between"
	>
		<h2 class="text-sm font-medium">
			<a
				href="/"
				class="text-sm text-slate-800 hover:text-blue-600 transition-colors"
			>
				{"Jaime Rios"}
			</a>
		</h2>

		<div class="internal-links hidden sm:flex space-x-1">
			{
				navLinks.map((link) => (
					<HeaderLink
						href={link.url}
						class="text-sm text-gray-600 hover:text-blue-600 py-1 px-2"
					>
						{link.name}
					</HeaderLink>
				))
			}
		</div>

		<div class="flex items-center gap-1">
			<div class="social-links hidden md:flex space-x-0.5">
				{
					socialLinks.map((link) => (
						<a
							href={link.url}
							target="_blank"
							class="text-gray-500 hover:text-blue-600 p-1.5"
						>
							<span class="sr-only">{link.srText}</span>
							<svg
								viewBox="0 0 16 16"
								aria-hidden="true"
								width="20"
								height="20"
							>
								<path fill="currentColor" d={link.svgPath} />
							</svg>
						</a>
					))
				}
			</div>

			<div class="ml-2">
				<a
					href="https://cal.com/jrioscloud/45min"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center
                    px-3 py-1 text-xs
                    border border-blue-600 rounded
                    text-blue-600 hover:bg-blue-50
                    transition-colors duration-200
                    no-underline"
				>
					<span>Contact</span>
				</a>
			</div>
		</div>
	</nav>
</header>
