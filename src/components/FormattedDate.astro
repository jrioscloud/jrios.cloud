---
interface Props {
	date: Date | string;
}

const { date } = Astro.props;

const formattedDate = date ? new Date(date) : new Date();
---

<time datetime={formattedDate.toISOString()}>
	{
		formattedDate.toLocaleDateString("en-us", {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
