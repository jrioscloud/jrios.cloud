---
// CaseStudyCard.astro

const { caseStudy, caseStudies } = Astro.props;
---

<a
    href={`/case-studies/${caseStudy.id}`}
    class={`group bg-white p-7 md:p-8 rounded-xl border border-slate-200/80 shadow-sm hover:shadow-md
           transition-all duration-300 ease-[cubic-bezier(0.25,0.1,0.25,1)]
           ${caseStudies.length === 1 ? "max-w-2xl w-full" : "h-full"}
           hover:border-blue-400/50 hover:-translate-y-0.5`}
>
    <div class="flex flex-col h-full space-y-5">
        <!-- Title Section -->
        <div class="space-y-4">
            <h3
                class="font-heading text-xl md:text-2xl font-semibold text-slate-900 leading-tight"
            >
                {caseStudy.data.title}
            </h3>
            <p
                class="font-sans text-base md:text-[0.97rem] text-slate-600/90 leading-relaxed"
            >
                {caseStudy.data.description}
            </p>
        </div>

        <!-- Key Features -->
        {
            caseStudy.data.keyFeatures && (
                <ul class="space-y-2.5">
                    {caseStudy.data.keyFeatures.map((feature) => (
                        <li class="flex items-start space-x-2.5">
                            <svg
                                class="w-4 h-4 mt-1 text-blue-600 shrink-0"
                                viewBox="0 0 24 24"
                                fill="none"
                            >
                                <path
                                    d="M20 6L9 17L4 12"
                                    stroke="currentColor"
                                    stroke-width="1.75"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                />
                            </svg>
                            <span class="font-sans text-sm md:text-[0.925rem] text-slate-700/90 leading-snug">
                                {feature}
                            </span>
                        </li>
                    ))}
                </ul>
            )
        }

        <!-- Metadata Section -->
        <div class="mt-auto pt-6 space-y-4 border-t border-slate-100/80">
            <dl class="grid grid-cols-2 gap-4">
                {
                    caseStudy.data.result && (
                        <div class="col-span-2">
                            <dt class="font-sans text-xs font-medium uppercase tracking-wide text-blue-600 mb-1.5">
                                Impact
                            </dt>
                            <dd class="font-sans text-sm text-slate-700 leading-tight">
                                {caseStudy.data.result}
                            </dd>
                        </div>
                    )
                }

                <div>
                    <dt
                        class="font-sans text-xs font-medium uppercase tracking-wide text-slate-500 mb-1.5"
                    >
                        Industry
                    </dt>
                    <dd class="font-sans text-sm text-slate-700 leading-tight">
                        {caseStudy.data.industry || "N/A"}
                    </dd>
                </div>

                <div>
                    <dt
                        class="font-sans text-xs font-medium uppercase tracking-wide text-slate-500 mb-1.5"
                    >
                        Timeline
                    </dt>
                    <dd class="font-sans text-sm text-slate-700 leading-tight">
                        {caseStudy.data.duration}
                    </dd>
                </div>
            </dl>

            <div class="font-sans text-sm text-slate-500/90 italic">
                {
                    new Date(caseStudy.data.pubDate).toLocaleDateString(
                        "en-US",
                        {
                            year: "numeric",
                            month: "long",
                            day: "numeric",
                        },
                    )
                }
            </div>
        </div>
    </div>
</a>
