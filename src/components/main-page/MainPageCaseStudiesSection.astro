---
import { getCollection } from "astro:content";
import CaseStudyCard from "../cards/CaseStudyCard.astro";

const caseStudies = (await getCollection("caseStudies")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<section class="py-12 md:py-16 bg-gradient-to-b from-white to-slate-50/50">
    <div class="container mx-auto px-4 sm:px-5">
        <!-- Header Section -->
        <div class="max-w-3xl mx-auto text-center mb-10 md:mb-14 space-y-3">
            <h2
                class="font-heading text-3xl sm:text-4xl md:text-[2.75rem] font-bold text-slate-900 tracking-tight leading-tight"
            >
                Engineering <span class="text-blue-600">Breakdowns</span>
            </h2>
            <p
                class="font-sans text-lg md:text-xl text-slate-600/90 leading-relaxed max-w-2xl mx-auto"
            >
                Mission-critical infrastructure solutions with measurable ROI
            </p>
        </div>

        <!-- Grid Container -->
        <div
            class={`${caseStudies.length === 1 ? "flex justify-center" : "grid md:grid-cols-2 xl:grid-cols-3"} gap-8 md:gap-10`}
        >
            {
                caseStudies.map((caseStudy) => (
                    <CaseStudyCard
                        caseStudy={caseStudy}
                        caseStudies={caseStudies}
                    />
                ))
            }
        </div>
    </div>
</section>
