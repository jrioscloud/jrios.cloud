---
import { getCollection } from "astro:content";

const caseStudies = (await getCollection("caseStudies")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<section class="py-12 md:py-16 bg-gradient-to-b from-white to-slate-50/50">
    <div class="container mx-auto px-4 sm:px-5">
        <!-- Header Section -->
        <div class="max-w-3xl mx-auto text-center mb-10 md:mb-14 space-y-3">
            <h2 class="font-heading text-3xl sm:text-4xl md:text-[2.75rem] font-bold text-slate-900 tracking-tight leading-tight">
                Engineering <span class="text-blue-600">Breakdowns</span>
            </h2>
            <p class="font-sans text-lg md:text-xl text-slate-600/90 leading-relaxed max-w-2xl mx-auto">
                Mission-critical infrastructure solutions with measurable ROI
            </p>
        </div>

        <!-- Grid Container -->
        <div class={`${caseStudies.length === 1 ? 'flex justify-center' : 'grid md:grid-cols-2 xl:grid-cols-3'} gap-8 md:gap-10`}>
            {caseStudies.map((caseStudy) => (
                <a
                    href={`/case-studies/${caseStudy.id}`}
                    class={`group bg-white p-7 md:p-8 rounded-xl border border-slate-200/80 shadow-sm hover:shadow-md
                           transition-all duration-300 ease-[cubic-bezier(0.25,0.1,0.25,1)]
                           ${caseStudies.length === 1 ? 'max-w-2xl w-full' : 'h-full'}
                           hover:border-blue-400/50 hover:-translate-y-0.5`}
                >
                    <div class="flex flex-col h-full space-y-5">
                        <!-- Title Section -->
                        <div class="space-y-4">
                            <h3 class="font-heading text-xl md:text-2xl font-semibold text-slate-900 leading-tight">
                                {caseStudy.data.title}
                            </h3>
                            <p class="font-sans text-base md:text-[0.97rem] text-slate-600/90 leading-relaxed">
                                {caseStudy.data.description}
                            </p>
                        </div>

                        <!-- Key Features -->
                        {caseStudy.data.keyFeatures && (
                            <ul class="space-y-3.5">
                                {caseStudy.data.keyFeatures.map((feature) => (
                                    <li class="flex items-start space-x-2.5">
                                        <svg class="w-4.5 h-4.5 mt-1.5 text-blue-600 shrink-0" viewBox="0 0 24 24" fill="none">
                                            <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                        <span class="font-sans text-sm md:text-[0.95rem] text-slate-700/90 leading-relaxed">
                                            {feature}
                                        </span>
                                    </li>
                                ))}
                            </ul>
                        )}

                        <!-- Metadata Section -->
                        <div class="mt-auto pt-6 space-y-4 border-t border-slate-100/80">
                            <dl class="grid grid-cols-2 gap-4">
                                {caseStudy.data.result && (
                                    <div class="col-span-2">
                                        <dt class="font-sans text-xs font-medium uppercase tracking-wide text-blue-600 mb-1.5">
                                            Impact
                                        </dt>
                                        <dd class="font-sans text-sm text-slate-700 leading-tight">
                                            {caseStudy.data.result}
                                        </dd>
                                    </div>
                                )}
                                
                                <div>
                                    <dt class="font-sans text-xs font-medium uppercase tracking-wide text-slate-500 mb-1.5">
                                        Industry
                                    </dt>
                                    <dd class="font-sans text-sm text-slate-700 leading-tight">
                                        {caseStudy.data.industry || 'N/A'}
                                    </dd>
                                </div>
                                
                                <div>
                                    <dt class="font-sans text-xs font-medium uppercase tracking-wide text-slate-500 mb-1.5">
                                        Timeline
                                    </dt>
                                    <dd class="font-sans text-sm text-slate-700 leading-tight">
                                        {caseStudy.data.duration}
                                    </dd>
                                </div>
                            </dl>
                            
                            <div class="font-sans text-sm text-slate-500/90 italic">
                                {new Date(caseStudy.data.pubDate).toLocaleDateString('en-US', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                })}
                            </div>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </div>
</section>