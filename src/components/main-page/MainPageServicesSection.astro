<section id="servicios" class="min-h-screen py-20 bg-gray-900/50 dark:bg-gray-800/50">
    <div class="container mx-auto px-6">
        <!-- Encabezado -->
        <div class="max-w-3xl mx-auto text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
                Servicios Enterprise AWS
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-400">
                De migraciones complejas a arquitecturas multi-account
            </p>
        </div>

        <!-- Grid de Servicios -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Tarjeta de Servicio 1 -->
            <div class="bg-white dark:bg-gray-800 p-8 rounded-lg border border-gray-200 dark:border-gray-700 shadow-md hover:border-blue-500 hover:shadow-lg transition-all">
                <div class="code-font text-blue-500 dark:text-blue-400 mb-4">
                    [Migration]
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
                    Migración Enterprise
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                    Planificación y ejecución de migraciones complejas con Near-Zero Downtime
                </p>
            </div>

            <!-- Tarjeta de Servicio 2 -->
            <div class="bg-white dark:bg-gray-800 p-8 rounded-lg border border-gray-200 dark:border-gray-700 shadow-md hover:border-blue-500 hover:shadow-lg transition-all">
                <div class="code-font text-blue-500 dark:text-blue-400 mb-4">
                    [Architecture]
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
                    Arquitectura Multi-Account
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                    Diseño e implementación de arquitecturas escalables y seguras
                </p>
            </div>

            <!-- Tarjeta de Servicio 3 -->
            <div class="bg-white dark:bg-gray-800 p-8 rounded-lg border border-gray-200 dark:border-gray-700 shadow-md hover:border-blue-500 hover:shadow-lg transition-all">
                <div class="code-font text-blue-500 dark:text-blue-400 mb-4">
                    [Optimization]
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
                    Optimización de Costos
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                    Análisis y reducción de costos en infraestructura AWS
                </p>
            </div>

            <!-- Tarjeta de Servicio 4 -->
            <div class="bg-white dark:bg-gray-800 p-8 rounded-lg border border-gray-200 dark:border-gray-700 shadow-md hover:border-blue-500 hover:shadow-lg transition-all">
                <div class="code-font text-blue-500 dark:text-blue-400 mb-4">
                    [Security]
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
                    Seguridad y Cumplimiento
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                    Implementación de mejores prácticas de seguridad y cumplimiento normativo
                </p>
            </div>
        </div>
    </div>
</section>